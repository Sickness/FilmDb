<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/background">
	<ScrollView android:orientation="vertical"
		android:layout_above="@+id/myFooter" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:padding="5dp">
		<LinearLayout android:orientation="vertical"
			android:layout_width="match_parent" android:layout_height="match_parent">

			<RelativeLayout android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:layout_marginBottom="20dp">
				<TextView android:id="@+id/title_show"
					android:layout_width="270dp" android:textSize="16dp"
					android:textStyle="bold" android:layout_alignParentLeft="true"
					android:ellipsize="marquee" android:singleLine="true"
					android:layout_height="wrap_content" android:layout_marginBottom="5dp" />
				<Button android:id="@+id/watched_show" android:layout_width="20dp"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true" android:layout_height="20dp"
					android:background="@drawable/icon_red_v" />
			</RelativeLayout>

			<ImageView android:layout_height="wrap_content"
				android:src="@drawable/movie" android:layout_width="wrap_content"
				android:id="@+id/poster_show" android:maxWidth="150dp"
				android:maxHeight="250dp" android:adjustViewBounds="true"
				android:scaleType="fitCenter" android:layout_marginBottom="20dp"
				android:layout_gravity="center_horizontal" android:clickable="true" />

			<TextView android:id="@+id/synopsis_show"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginBottom="5dp" />
		</LinearLayout>
	</ScrollView>

	<RelativeLayout android:id="@+id/myFooter"
		android:padding="5dp" android:layout_alignParentBottom="true"
		android:layout_height="30dp" android:layout_width="fill_parent"
		android:background="#80000000">
		<TextView android:id="@+id/genre_show" android:layout_width="270dp"
			android:textStyle="italic" android:layout_height="wrap_content"
			android:textSize="12dp" android:layout_alignParentLeft="true"
			android:ellipsize="marquee" android:singleLine="true" />
		<Button android:id="@+id/delete_show" android:layout_width="20dp"
			android:layout_alignParentRight="true" android:layout_centerVertical="true"
			android:layout_height="20dp" android:background="@drawable/icon_delete" />
	</RelativeLayout>
</RelativeLayout>