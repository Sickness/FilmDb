<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="35dip" android:gravity="center_vertical"
	android:paddingLeft="5dip" android:background="#000000">

	<ImageView android:id="@+id/icon" android:layout_width="30dp"
		android:layout_height="30dp" android:src="@drawable/header" />
	<TextView android:id="@+id/title" android:layout_width="wrap_content"
	android:layout_marginLeft="5dp"
		android:layout_height="wrap_content" android:textSize="16dip"
		android:text="@string/app_name" android:paddingRight="5dip" 
		android:textStyle="italic"/>

</LinearLayout>